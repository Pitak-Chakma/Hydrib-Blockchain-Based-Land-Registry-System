# Production Environment Configuration
# Copy this file to .env for production deployment

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=False

# Security - CHANGE THESE VALUES!
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION

# Database
DATABASE_PATH=/var/lib/landregistry/land_registry.db

# File Upload
UPLOAD_FOLDER=/var/lib/landregistry/uploads
MAX_UPLOAD_SIZE=16777216

# Session Configuration
SESSION_TIMEOUT=7200
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATE_LIMIT_STORAGE=memory://
RATE_LIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/landregistry/app.log

# Email Configuration (for notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME=System Administrator

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/landregistry
BACKUP_LOG_FILE=/var/log/landregistry/backup.log

# Security Headers
ENABLE_HSTS=True
ENABLE_CSP=True

# Performance
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_BIND=127.0.0.1:8000

# Monitoring
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/landregistry.crt
SSL_KEY_PATH=/etc/ssl/private/landregistry.key

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# File Storage
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# Blockchain Configuration
BLOCKCHAIN_ENABLED=True
BLOCKCHAIN_NETWORK=private

# API Configuration
API_RATE_LIMIT=1000 per hour
API_KEY_REQUIRED=False

# Maintenance Mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.